<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_layout_travelling"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_travelling"
            android:layout_width="68dp"
            android:layout_height="48dp"
            android:src="@mipmap/img_default"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ll">

        <TextView
            android:id="@+id/tv_title_travelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="标题:"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_description_travelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_travelling"
            android:layout_marginTop="5dp"
            android:text="新闻来源:"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_date_travelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description_travelling"
            android:text="时间:"
            android:textSize="12sp"/>

    </RelativeLayout>

</RelativeLayout>